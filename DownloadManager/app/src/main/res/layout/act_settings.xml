<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include android:id="@+id/rlToolBar"
            layout="@layout/top_bar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rlToolBar"
            android:layout_margin="@dimen/small_margin"
            >

            <LinearLayout
                android:id="@+id/llDirectory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin2"
                android:orientation="vertical">

                <omar.apps923.downloadmanager.GUI.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setDirTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>

                <omar.apps923.downloadmanager.GUI.CustomTextView
                    android:id="@+id/textDirectory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/setDirSummary"
                    tools:ignore="UnusedAttribute"/>




            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>